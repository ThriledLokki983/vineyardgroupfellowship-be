# Docker Environment Configuration
# Copy this file to .env.docker for Docker Compose development
#
# WARNING: These are example credentials for local development only!
# NEVER use these credentials in production!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database Settings (for Docker)
DB_NAME=vineyard_group_fellowship_dev
DB_USER=vineyard_group_fellowship
DB_PASSWORD=vineyard_group_fellowship_dev_password
DB_HOST=postgres  # Docker service name
DB_PORT=5432

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Redis Cache Settings (for Docker)
REDIS_PASSWORD=redis_dev_password
REDIS_URL=redis://:redis_dev_password@redis:6379/1

# ============================================================================
# DJANGO CONFIGURATION
# ============================================================================

# Django Settings
SECRET_KEY=django-insecure-development-key-change-in-production
DEBUG=True
DJANGO_ENVIRONMENT=development

# Allowed Hosts (Docker containers)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web

# ============================================================================
# CORS & SECURITY
# ============================================================================

# CORS Configuration for frontend development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email Backend Options:

# Option 1: Console (prints to Docker logs)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Option 2: MailHog (Docker service for email testing)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=mailhog
# EMAIL_PORT=1025
# EMAIL_USE_TLS=False

# Option 3: SendGrid (for production-like testing)
# EMAIL_BACKEND=core.email_backends.SendGridWebAPIBackend
# SENDGRID_API_KEY=your-sendgrid-api-key
# DEFAULT_FROM_EMAIL=Vineyard Group Fellowship <info@vineyardgroupfellowship.org>

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Development Feature Flags
USE_MAILHOG=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_SILK_PROFILING=false

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Logging Configuration
LOG_LEVEL=DEBUG
STRUCTURED_LOGGING=true

# Monitoring Configuration
MONITORING_SAMPLE_RATE=1.0
ENABLE_PERFORMANCE_MONITORING=true