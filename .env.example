# Server Configuration
SERVER_PORT=8001  # Port for Django development server

# Database Configuration (PostgreSQL Required)
# PostgreSQL is required in all environments for production parity
# No SQLite fallback - ensures consistent development-production environment

# Local Development Database
DB_NAME=vineyard_group_fellowship_dev
DB_USER=vineyard_group_fellowship
DB_PASSWORD=vineyard_group_fellowship
DB_HOST=localhost  # Use 'postgres' when running in Docker
DB_PORT=5432

# Alternative: Use PostgreSQL connection URL format
# DATABASE_URL=postgresql://user:password@host:port/database

# Cache Configuration (Redis)
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379/1

# CORS Configuration
